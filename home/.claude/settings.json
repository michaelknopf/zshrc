{
  "permissions": {
    "allow": [
      "Read(**/*)",
      "Bash(just:*)",
      "Bash(pnpm:*)",
      "Bash(docker:*)",
      "Bash(go:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "gofmt -w \"$CLAUDE_PROJECT_DIR\""
          }
        ]
      }
    ]
  },
  "model": "opusplan"
}