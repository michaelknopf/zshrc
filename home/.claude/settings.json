{
  "permissions": {
    "allow": [
      "WebFetch",
      "WebSearch",
      "Fetch",
      "Search",
      "Read",
      "Bash(just:*)",
      "Bash(pnpm:*)",
      "Bash(docker:*)",
      "Bash(go:*)",
      "Bash(./bin:*)",
      "Bash(curl:*)",
      "Bash(docker:*)",
      "Bash(cat:*)",
      "Bash(lsof:*)",
      "Bash(tree:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(gh:*)",
      "Bash(jq:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "bypassPermissions"
  },
  "model": "opusplan",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "main@savi-tools": true,
    "savi@savi-tools": true
  },
  "alwaysThinkingEnabled": false,
  "allowedTools": [
    "Search",
    "Read",
    "WebSearch"
  ]
}
