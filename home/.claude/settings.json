{
  "model": "opusplan",
  "permissions": {
    "allow": [
      "Read(**/*)",
      "Bash(just:*)",
      "Bash(pnpm:*)",
      "Bash(docker:*)",
      "Bash(go:*)",
      "Bash(./bin:*)",
      "Bash(curl:*)",
      "Bash(docker:*)",
      "Bash(cat:*)",
      "Bash(lsof:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "gofmt -w \"$CLAUDE_PROJECT_DIR\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  }
}
