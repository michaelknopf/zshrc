{
  "permissions": {
    "allow": [
      "WebFetch",
      "Fetch",
      "Search",
      "Read",
      "Bash(just:*)",
      "Bash(pnpm:*)",
      "Bash(docker:*)",
      "Bash(go:*)",
      "Bash(./bin:*)",
      "Bash(curl:*)",
      "Bash(docker:*)",
      "Bash(cat:*)",
      "Bash(lsof:*)",
      "Bash(tree:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)"
    ],
    "defaultMode": "bypassPermissions",
    "deny": [],
    "ask": []
  },
  "allowedTools": [
    "Search",
    "Read"
  ]
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "claude_hooks notification"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "main@savi-tools": true
  },
  "alwaysThinkingEnabled": true
}
